<% layout('/layouts/boilerplate') -%>
<body>
    <div class="row">
        <div class="col-lg-8 col-sm-10 offset-sm-1 offset-lg-2 mt-4">
            <h2 class="mb-3">Welcome, <%= currUser.username %></h2>
            <form action="/todos" method="post" style="display: flex;">
                <input type="text" name="todo" class="form-control todo-inp" placeholder="Add your todo">
                <button class="btn todo-btn my-btn">+</button>
            </form>
            <% if(userTodos.length === 0){ %>
                <p class="mt-3 todo-msg">No Todos found!</p>
            <% }else{ %>
                <div class="todos mt-4">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">S.No</th>
                                <th scope="col">Todo</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% userTodos.forEach((todo, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td><%= todo.message %></td>
                                    <td class="action">
                                        <a href="/todos/<%= todo._id %>" class="btn btn-outline-dark action-btn mx-1"><i class="fa-solid fa-pen"></i></a>
                                        <form method="post" action="/todos/<%= todo._id%>?_method=DELETE">
                                            <button class="btn btn-outline-danger action-btn"><i class="fa-solid fa-xmark"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } %>
        </div>
    </div>
</body>